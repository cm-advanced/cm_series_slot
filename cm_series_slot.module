		  '#timepicker_options' => array(
						 'showPeriod' => TRUE,
						 'amPmText' =>array('am','pm'),
						 'periodSeparator' => '',
						 'rows' => 2,
						 'minutes' => 
						 array(
						       'starts' => 0,
						       'ends' => 30,
						       'interval' => 30,
						       ),
						 'showCloseButton' => TRUE,
						 'closeButtonText' => 
						 t('Close'),
						 ),
		  '#description' => '',
		  '#prefix' => $prefix,
		  '#suffix' => $airing_links.$suffix,
		  );
	}	
      }
    }  
